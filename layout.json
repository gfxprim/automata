{
  "version": 1,
  "cols": 1,
  "rows": 3,
  "align": "fill",
  "rfill": "1, 0, 0",
  "widgets": [
    {
      "type": "pixmap",
      "on_event": "pixmap_on_event",
      "align": "fill",
      "w": 64,
      "h": 64,
      "uid": "pixmap"
    },
    {
      "type": "frame",
      "label": "Settings",
      "halign": "fill",
      "widget": {
        "rows": 2,
        "halign": "fill",
        "frame": "none",
        "widgets": [
          {
            "halign": "fill",
            "cfill": "8 * 0",
            "cpadf": "0, 0, 1, 1, 0, 1, 0, 0, 0",
            "border": "none",
            "cols": 8,
            "widgets": [
              {
                "type": "label",
                "text": "Rule No.",
                "halign": "left"
              },
              {
                "type": "tbox",
                "on_event": "rule_widget_on_event",
                "len": 3,
                "max_len": 3,
                "text": "110"
               },
               {
                 "type": "checkbox",
                 "label": "Reversible",
                 "on_event": "rule_widget_on_event"
               },
               {
                 "type": "tbox",
                 "len": 2,
                 "max_len": 2,
                 "text": "1",
                 "on_event": "width_widget_on_event"
               },
               {
                 "type": "label",
                 "text": "X 64 Width"
               },
               {
                 "type": "tbox",
                 "len": 4,
                 "max_len": 4,
                 "text": "64",
                 "on_event": "height_widget_on_event"
               },
               {
                 "type": "label",
                 "text": "Height"
               }
            ]
          },
          {
            "halign": "fill",
            "cols": 2,
            "cfill": "0, 1",
            "border": "none",
            "widgets": [
              {
                "type": "label",
                "text": "Initial Conditions:"
              },
              {
                "type": "tbox",
                "uid": "init",
                "halign": "fill",
                "on_event": "init_widget_on_event",
                "len": 40
               }
            ]
          }
        ]
     }
  },
  {
    "cols": 3,
    "halign": "fill",
    "cfill": "0, 1, 0",
    "border": "none",
    "widgets": [
      {
        "type": "button",
        "btype": "open",
        "label": "Select Dir",
        "on_event": "select_dir_on_event"
      },
      {
        "type": "tbox",
        "halign": "fill",
        "uid": "file path",
        "len": 40
      },
      {
        "type": "button",
        "btype": "save",
        "label": "Save",
        "on_event": "save_on_event"
      }
    ]
  }
 ]
}
